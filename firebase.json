{
  "hosting": {
    "public": "public",
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      }
    ],
    "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
    ],
    "rewrites": [
        {
            "source": "/sitemap.xml",
            "destination": "/sitemap.xml"
        },
        {
            "source": "/search",
            "destination": "/navigation/search.html"
        },        
        {
            "source": "/about",
            "destination": "/navigation/about.html"
        },
        {
            "source": "/published-papers",
            "destination": "/navigation/published-papers.html"
        },
        {
            "source": "/staff",
            "destination": "/navigation/staff.html"
        },
        {
            "source": "/archives",
            "destination": "/navigation/archives.html"
        },
        {
            "source": "/privacy-policy",
            "destination": "/navigation/privacy-policy.html"
        },
        {
            "source": "/articles/**",
            "destination": "/articles/articles.html"
        },
        {
            "source": "/inkers/**",
            "destination": "/inkers/inkers.html"
        },
        {
            "source": "/published-papers/**",
            "destination": "/published-papers/published-papers.html"
        }
    ]
  }
}
