{
  "hosting": {
    "public": "public",
    "headers": [{
        "source": "/**",
        "headers": [{
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
        }]
    }],
    "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
    ],
    "rewrites": [
        {
            "source": "/search",
            "destination": "/search.html"
        },        
        {
            "source": "/about",
            "destination": "/about.html"
        },
        {
            "source": "/published-papers",
            "destination": "/published-papers.html"
        },
        {
            "source": "/staff",
            "destination": "/staff.html"
        },
        {
            "source": "/archives",
            "destination": "/archives.html"
        },
        {
            "source": "/privacy-policy",
            "destination": "/privacy-policy.html"
        },
        {
            "source": "/articles/**",
            "destination": "/articles/articles.html"
        },
        {
            "source": "/inkers/**",
            "destination": "/inkers/inkers.html"
        },
        {
            "source": "/published-papers/**",
            "destination": "/published-papers/published-papers.html"
        }
    ]
  }
}
